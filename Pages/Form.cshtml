@page
@model RazorPagesExample.Pages.FormModel
@{
    ViewData["Title"] = "Personal Information";
}

<div class="text-left">
    <h2>Personal Information</h2>
    <form method="post">
        <div class="form-group row">
            <label>Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name" type="text" />
        </div>

        <div class="form-group row">
            <label>Age </label>
            <input asp-for="Age" class="form-control" placeholder="Age" type="text" />
        </div>

        <div class="form-group row">
            <label>Email Address </label>
            <input asp-for="EmailAddress" class="form-control" placeholder="Email" type="email" />
        </div>

        <div class="form-group row ">
            <label>Birth Date </label>
            <input asp-for="BirthDate" class="form-control" type="date" min="1900-01-01" />
        </div>

        <input type="submit" value="Submit">

        <div class=@(Model.IsSubmitted ? "" : "hidden")>
            <h6>@Model.Name</h6>
            <h6>@Model.Age</h6>
            <h6>@Model.EmailAddress</h6>
            <h6>@Model.BirthDate</h6>
        </div>

    </form>
</div>